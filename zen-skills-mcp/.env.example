# ============================================
# Zen Skills MCP Configuration
# ============================================
# Copy to .env and customize as needed

# --------------------------------------------
# Provider Configuration (Best Models)
# --------------------------------------------

# OpenAI Codex CLI - GPT-5.2-XHigh (highest performance)
ZEN_CODEX_CMD=codex
ZEN_CODEX_MODEL=gpt-5.2-xhigh
ZEN_CODEX_TIMEOUT=900
ZEN_CODEX_ENABLED=true
# Command: codex exec --model gpt-5.2-xhigh "<prompt>"

# Google Gemini CLI - Gemini 3 Pro Preview (large context)
ZEN_GEMINI_CMD=gemini
ZEN_GEMINI_MODEL=gemini-3-pro-preview
ZEN_GEMINI_TIMEOUT=600
ZEN_GEMINI_ENABLED=true
# Command: gemini --model "gemini-3-pro-preview" "<prompt>"

# Anthropic Claude CLI - Opus (most capable reasoning)
ZEN_CLAUDE_CMD=claude
ZEN_CLAUDE_MODEL=opus
ZEN_CLAUDE_TIMEOUT=600
ZEN_CLAUDE_ENABLED=true
# Command: claude -p "<prompt>" --model opus

# --------------------------------------------
# Coordination Policy (Paper-Aligned)
# --------------------------------------------

# Capability saturation threshold (~45% from paper)
# If you're this confident, skip ensemble
ZEN_CAPABILITY_THRESHOLD=0.45

# Per-stage consult limit
ZEN_MAX_CONSULT_PER_STAGE=2

# Total consult budget per workflow
ZEN_MAX_CONSULT_TOTAL=6

# Prefer tests over voting for selection
ZEN_PREFER_TESTS_FIRST=true

# Enable ensemble for hypothesis stage
ZEN_ENSEMBLE_HYPOTHESES=true

# Disable ensemble for implementation (tool-heavy)
ZEN_ENSEMBLE_IMPL=false

# Use single agent for debug loop (sequential task)
ZEN_DEBUG_SINGLE_AGENT=true

# --------------------------------------------
# Context Engineering
# --------------------------------------------

# Maximum files to include in context
ZEN_CONTEXT_MAX_FILES=7

# Maximum lines per file
ZEN_CONTEXT_MAX_LINES=200

# Maximum error log lines
ZEN_CONTEXT_MAX_ERROR_LINES=50

# Maximum total context characters
ZEN_CONTEXT_MAX_CHARS=40000

# --------------------------------------------
# Tracing & Observability
# --------------------------------------------

# Enable tracing
ZEN_TRACING_ENABLED=true

# Trace output directory
ZEN_TRACE_DIR=.zen-traces

# Log level (DEBUG, INFO, WARNING, ERROR)
ZEN_LOG_LEVEL=INFO

# --------------------------------------------
# Tool Management
# --------------------------------------------

# Disable specific tools to reduce context overhead
# Comma-separated list of tool names
# Example: ZEN_DISABLED_TOOLS=zen_run_stage,zen_workflow_state
ZEN_DISABLED_TOOLS=
