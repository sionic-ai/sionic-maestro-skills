# ============================================
# Maestro Skills MCP Configuration
# ============================================
# Copy to .env and customize as needed

# --------------------------------------------
# Provider Configuration (Best Models)
# --------------------------------------------

# OpenAI Codex CLI - GPT-5.2-XHigh (highest performance)
MAESTRO_CODEX_CMD=codex
MAESTRO_CODEX_MODEL=gpt-5.2-xhigh
MAESTRO_CODEX_TIMEOUT=900
MAESTRO_CODEX_ENABLED=true
# Command: codex exec --model gpt-5.2-xhigh "<prompt>"

# Google Gemini CLI - Gemini 3 Pro Preview (large context)
MAESTRO_GEMINI_CMD=gemini
MAESTRO_GEMINI_MODEL=gemini-3-pro-preview
MAESTRO_GEMINI_TIMEOUT=600
MAESTRO_GEMINI_ENABLED=true
# Command: gemini --model "gemini-3-pro-preview" "<prompt>"

# Anthropic Claude CLI - Opus (most capable reasoning)
MAESTRO_CLAUDE_CMD=claude
MAESTRO_CLAUDE_MODEL=opus
MAESTRO_CLAUDE_TIMEOUT=600
MAESTRO_CLAUDE_ENABLED=true
# Command: claude -p "<prompt>" --model opus

# --------------------------------------------
# Coordination Policy (Paper-Aligned)
# --------------------------------------------

# Capability saturation threshold (~45% from paper)
# If you're this confident, skip ensemble
MAESTRO_CAPABILITY_THRESHOLD=0.45

# Per-stage consult limit
MAESTRO_MAX_CONSULT_PER_STAGE=2

# Total consult budget per workflow
MAESTRO_MAX_CONSULT_TOTAL=6

# Prefer tests over voting for selection
MAESTRO_PREFER_TESTS_FIRST=true

# Enable ensemble for hypothesis stage
MAESTRO_ENSEMBLE_HYPOTHESES=true

# Disable ensemble for implementation (tool-heavy)
MAESTRO_ENSEMBLE_IMPL=false

# Use single agent for debug loop (sequential task)
MAESTRO_DEBUG_SINGLE_AGENT=true

# --------------------------------------------
# Context Engineering
# --------------------------------------------

# Maximum files to include in context
MAESTRO_CONTEXT_MAX_FILES=7

# Maximum lines per file
MAESTRO_CONTEXT_MAX_LINES=200

# Maximum error log lines
MAESTRO_CONTEXT_MAX_ERROR_LINES=50

# Maximum total context characters
MAESTRO_CONTEXT_MAX_CHARS=40000

# --------------------------------------------
# Tracing & Observability
# --------------------------------------------

# Enable tracing
MAESTRO_TRACING_ENABLED=true

# Trace output directory
MAESTRO_TRACE_DIR=.maestro-traces

# Log level (DEBUG, INFO, WARNING, ERROR)
MAESTRO_LOG_LEVEL=INFO

# --------------------------------------------
# Tool Management
# --------------------------------------------

# Disable specific tools to reduce context overhead
# Comma-separated list of tool names
# Example: MAESTRO_DISABLED_TOOLS=maestro_run_stage,maestro_workflow_state
MAESTRO_DISABLED_TOOLS=
